{block content}

<div class="flex-row">
    <p><a n:href="Homepage:default">‚Üê back to posts list</a></p>
    <a class="new-edit-post" n:href="edit $post->id">Edit this post</a>
</div>
<div class="post1">
    <p class="date">{$post->created_at|date:'F j, Y'}</p>
    <h1 n:block="title">{$post->title}</h1>
    <p>{$post->content}</p>
</div>

<h2>Post new comment</h2>
{control commentForm}

<h2>Comments ({count($comments)})</h2>
<div class="comments">

    {* If there are no comments *}
    {if count($comments) == 0}
        <p>There are no comments yet</p>
    {/if}

	{foreach $comments as $comment}
        <div class="comment">
            <h3><b><a href="mailto:{$comment->email}" n:tag-if="$comment->email">{$comment->name}</a></b> said:</h3>
            <p>{$comment->content}</p>
            <p class="date">{$comment->created_at|date:'H:i \/ j\.m\.Y'}</p>
        </div>
	{/foreach}

</div>